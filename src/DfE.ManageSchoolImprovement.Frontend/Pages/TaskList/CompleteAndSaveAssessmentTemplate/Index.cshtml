@page "/task-list/complete-and-save-assesment-template/{id:int}"
@model DfE.ManageSchoolImprovement.Frontend.Pages.TaskList.CompleteAndSaveAssessmentTemplate.IndexModel
@{
    ViewData["Title"] = "Complete and save the assessment template";
}

@section BeforeMain
{
    <a asp-page="@Links.TaskList.Index.Page" asp-route-id="@Model.SupportProject.Id" class="govuk-back-link">Back</a>
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <span class="govuk-caption-l" data-cy="school-name">@Model.SupportProject.SchoolName</span>
        <h1 class="govuk-heading-l" data-cy="page-heading">
            Complete and save the assessment template
        </h1> 
        <p class="govuk-body" data-cy="instruction-to-adviser">Work with the adviser to decide whether the school should get targeted support or be monitored for more time first.</p>
        <form method="post" novalidate> 
            <govuk-checkbox-input label="Talk to the adviser about their findings from the visit and discussions with the school" id="has-talk-to-adviser" name="has-talk-to-adviser" asp-for="@Model.HasTalkToAdviserAboutFindings" />
            <govuk-checkbox-input label-hint="Use the assessment criteria to help make your decision" label="Complete the assessment template" id="complete-assessment-template" name="has-complete-assessment-template" asp-for="@Model.HasCompleteAssessmentTemplate" />
            <govuk-date-input heading-label="false" label="Enter date assessment template saved in SharePoint" id="saved-assessemnt-template-in-sharepoint-date" name="saved-assessemnt-template-in-sharepoint-date" asp-for="@Model.SavedAssessmentTemplateInSharePointDate" hint="For example, 1 7 2024." />
            <button class="govuk-button" type="submit" id="save-and-continue-button" data-module="govuk-button" data-cy="select-common-submitbutton">
                Save and return
            </button>
        </form>
    </div>
</div>

