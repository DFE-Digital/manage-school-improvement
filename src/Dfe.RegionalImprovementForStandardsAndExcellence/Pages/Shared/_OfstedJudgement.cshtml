@model string

@{
    string output;
    string colour;

    switch (Model)
    {
        case "1":
            output = "Outstanding";
            colour = "green";
            break;
        case "2":
            output = "Good";
            colour = "turquoise";
            break;
        case "3":
            output = "Requires improvement";
            colour = "orange";
            break;
        case "4":
            output = "Inadequate";
            colour = "red";
            break;
        case "5":
            output = "Insufficient evidence";
            colour = "yellow";
            break;
        case "6":
            output = "No judgement";
            colour = "grey";
            break;
        case "7":
            output = "Does not apply";
            colour = "grey";
            break;
        case "8":
            output = "Not yet inspected";
            colour = "grey";
            break;
        default:
            output = "Unknown";
            colour = "grey";
            break;
    }
}

<strong class="govuk-tag govuk-tag--@colour" id="">@output</strong>