@page "/improvement-plan/add-an-objective/{id:int}"
@model AddAnObjectiveModel
@{
    ViewData["Title"] = "Add an objective";
}

@section BeforeMain
{
    <a asp-page="@Links.ImprovementPlan.SelectAnAreaOfImprovement.Page" asp-route-id="@Model.SupportProject.Id" class="govuk-back-link">Back</a>
}

@if (Model.ShowError)
{
   <partial name="_ErrorSummary"/>
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <span class="govuk-caption-l">@Model.SelectedAreaOfImprovement</span>
        <h1 class="govuk-heading-l" data-cy="page-heading">
            Add an objective
        </h1>
        <p class="govuk-body">Give details of the school's plan to improve in this area. You may want to copy and paste from the plan itself.</p>
        
        <form method="post" novalidate>
            <div class="govuk-form-group">
                <label class="govuk-label govuk-visually-hidden" for="objective-details">
                    Objective details
                </label>
                <textarea class="govuk-textarea" id="objective-details" name="@nameof(Model.ObjectiveDetails)" rows="10" asp-for="@Model.ObjectiveDetails"></textarea>
            </div>

            <div class="govuk-button-group">
                <button class="govuk-button" type="submit" name="action" value="add-another" data-module="govuk-button">
                    Save and add another objective
                </button>
                <button class="govuk-button govuk-button--secondary" type="submit" name="action" value="finish" data-module="govuk-button">
                    Save and finish
                </button>
            </div>
        </form>
    </div>
</div>
