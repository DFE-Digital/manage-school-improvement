@page "/engagement-concern/date-of-approval-to-mandate/{id:int}"
@model DateOfDecisionModel

@{
    ViewData["Title"] = "Enter date of regional director's approval to mandate";
}

@section BeforeMain
{
    <nav aria-label="back navigation">
        <a asp-page="@Model.ReturnPage" asp-route-id="@Model.SupportProject.Id" class="govuk-back-link">Back</a>
    </nav>
}

@if (Model.ShowError)
{
    <partial name="_ErrorSummary" />
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <span class="govuk-caption-l">@Model.SupportProject.SchoolName</span>
        <form method="post">
            <div class="govuk-form-group">
                <h2 class="govuk-heading-l">Enter date of regional director's approval to mandate</h2>
                <govuk-date-input 
                    heading-label="false" 
                    hint="For example, 1 7 2024."
                    id="escalate-decision-date" 
                    name="escalate-decision-date" 
                    asp-for="@Model.DateOfDecision" />
                <div class="govuk-button-group govuk-body">
                    <button type="submit" draggable="false" class="govuk-button govuk-button" data-module="govuk-button" data-cy="escalate-date-decision-btn">
                        Save
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>
