@page "/engagement-concern/resolve-engagement-concern/{id:int}/date-concern-resolved"

@model Dfe.ManageSchoolImprovement.Frontend.Pages.EngagementConcern.ResolveEngagementConcern.DateConcernResolvedModel

@{
    ViewData["Title"] = "Enter date concern was resolved";
}

@section BeforeMain
{
    <a asp-page="@Links.EngagementConcern.ResolveEngagementConcern.Page" asp-route-id="@Model.SupportProject.Id" class="govuk-back-link" data-cy="back-link">Back</a>
}

@if (Model.ShowError)
{
    <partial name="_ErrorSummary" />
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <span class="govuk-caption-l">@Model.SupportProject.SchoolName</span>
        <h1 class="govuk-heading-l">
            Enter date concern was resolved
        </h1>
        <form method="post" novalidate>
            <govuk-date-input heading-label="false" 
                              label="Enter date concern was resolved" 
                              id="date-concern-resolved" 
                              name="date-concern-resolved" 
                              asp-for="@Model.DateConcernResolved" 
                              hint="For example, 1 7 2024."
                              data-cy="date-concern-resolved-input" />
            <div class="govuk-button-group govuk-body">
                <button type="submit" draggable="false" class="govuk-button govuk-button" data-module="govuk-button" data-cy="save-and-return-button">
                    Save and return
                </button>
            </div>
        </form>
    </div>
</div>
