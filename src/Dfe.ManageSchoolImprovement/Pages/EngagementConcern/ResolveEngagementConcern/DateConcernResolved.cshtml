@page "/engagement-concern/resolve-engagement-concern/{id:int}/date-concern-resolved"

@model Dfe.ManageSchoolImprovement.Frontend.Pages.EngagementConcern.ResolveEngagementConcern.DateConcernResolvedModel

@{
    ViewData["Title"] = "Enter date concern was resolved";
}

@section BeforeMain
{
    <a asp-page="@Links.EngagementConcern.ResolveEngagementConcern.Page" asp-route-id="@Model.SupportProject.Id" class="govuk-back-link">Back</a>
}

@if (Model.ShowError)
{
    <partial name="_ErrorSummary" />
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <span class="govuk-caption-l">@Model.SupportProject.SchoolName</span>
        <form method="post">
            <partial name="_DateInput" model="@Model.DateInputViewModel" />

            <div class="govuk-button-group govuk-body">
                <button type="submit" draggable="false" class="govuk-button govuk-button" data-module="govuk-button">
                    Save
                </button>
            </div>
        </form>
    </div>
</div>
