@page "/task-list/arrange-advisers-initial-visit/{id:int}"
@model             ArrangeAdvisersFirstFaceToFaceVisitModel

@{
    ViewData["Title"] = "Arrange adviser's initial visit";
}

@section BeforeMain
{
    <a asp-page="@Links.TaskList.Index.Page" asp-route-id="@Model.SupportProject.Id" class="govuk-back-link">Back</a>
}

@if (Model.ShowError)
{
   <partial name="_ErrorSummary"/>
}

<div class="govuk-grid-row">
<div class="govuk-grid-column-two-thirds">
    <span class="govuk-caption-l">@Model.SupportProject.SchoolName</span>
    <h1 class="govuk-heading-l">
            Arrange adviser's initial visit
    </h1>
        <p class="govuk-body">Work with the adviser and school to find a date and time for the adviser to make their initial visit.</p>
        <p class="govuk-body">It can take place in-person or remotely.</p>
        <p class="govuk-body">The length of the visit may change depending on the needs of the school.</p>
        
    <form method="post" novalidate>
        <govuk-checkbox-input 
            label="Confirm the adviser has the Note of Visit template" 
            id="confirm-adviser-has-note-of-visit-template" 
            name="confirm-adviser-has-note-of-visit-template" 
            asp-for="@Model.ConfirmAdviserHasNoteOfVisitTemplate" />

        <govuk-date-input heading-label="false" label="Enter planned date of visit" id="adviser-visit-date" name="adviser-visit-date" asp-for="@Model.AdviserVisitDate" hint="For example, 1 7 2024." />
        <button class="govuk-button" id="save-and-continue-button" data-module="govuk-button" data-cy="select-common-submitbutton">
            Save and return
        </button>
    </form>
</div>
</div>
