@page "/task-list/record-support-decision/{id:int}"
@model Dfe.ManageSchoolImprovement.Frontend.Pages.TaskList.RecordSupportDecision.IndexModel
@{
    ViewData["Title"] = "Record support decision";
}

@section BeforeMain
{
    <a asp-page="@Links.TaskList.Index.Page" asp-route-id="@Model.SupportProject.Id" class="govuk-back-link">Back</a>
}

@if (Model.ShowError)
{
   <partial name="_ErrorSummary"/>
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <span class="govuk-caption-l" data-cy="school-name">@Model.SupportProject.SchoolName</span>
        <h1 class="govuk-heading-l" data-cy="page-heading">
            Record support decision
        </h1>
        <form method="post" novalidate>
            <p class="govuk-body" data-cy="school-confirmtion-target-support">Confirm if a regional director has confirmed that this school should get targeted support.</p>
            <govuk-radiobuttons-input heading="Has a regional director confirmed that this school should get targeted support?" heading-style="govuk-fieldset__legend--m" hint="If the school will be monitored, add a note to give details."
                name="@nameof(Model.HasConfirmedSchoolGetTargetSupport)" radio-buttons="@Model.RadioButtoons" asp-for="@Model.HasConfirmedSchoolGetTargetSupport" />
            <govuk-date-input heading-label="false" label="Enter date the regional director made this decision" id="decision-date" name="decision-date" asp-for="@Model.RegionalDirectorDecisionDate" hint="For example, 1 7 2024." />
            <button class="govuk-button" type="submit" id="save-and-continue-button" data-module="govuk-button" data-cy="select-common-submitbutton">
                Save and return
            </button>
        </form>
    </div>
</div>
