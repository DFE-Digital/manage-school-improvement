@page "/task-list/adviser-conflict-of-interest/{id:int}"
@model AdviserConflictOfInterest

@{
    ViewData["Title"] = "Check potential adviser conflicts of interest";
}

@section BeforeMain
{
    <nav aria-label="back navigation">
        <a asp-page="@Links.TaskList.Index.Page" asp-route-id="@Model.SupportProject.Id" class="govuk-back-link"
           data-cy="back-link">Back</a>
    </nav>
}

@if (Model.ShowError)
{
    <partial name="_ErrorSummary"/>
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <span class="govuk-caption-l">@Model.SupportProject.SchoolName</span>
        <h1 class="govuk-heading-l">
            Check potential adviser conflicts of interest
        </h1>
        <p class="govuk-body">The adviser completed a conflict of interest declaration when they began working with
            DfE.</p>
        <p class="govuk-body">Use this to check for any conflicts of interest they may have with this school or its
            responsible body.</p>
        <form method="post" novalidate>
            <govuk-checkbox-input label="Review the adviser's conflict of interest declaration"
                                  id="review-advisers-conflict-of-interest-form"
                                  name="review-advisers-conflict-of-interest-form"
                                  asp-for="@Model.ReviewAdvisersConflictOfInterestForm"
                                  data-cy="review-advisers-conflict-of-interest-checkbox"/>
            <govuk-date-input heading-label="false"
                              label="Enter date when adviser's conflict of interest declaration was checked"
                              id="date-conflict-of-interest-declaration-checked"
                              name="date-conflict-of-interest-declaration-checked"
                              asp-for="@Model.DateConflictOfInterestDeclarationChecked" hint="For example, 1 7 2024."
                              data-cy="conflict-of-interest-declaration-checked-date-input"/>
            <button class="govuk-button" id="save-and-continue-button" data-module="govuk-button"
                    data-cy="select-common-submitbutton">
                Save and return
            </button>
        </form>
    </div>
</div>
