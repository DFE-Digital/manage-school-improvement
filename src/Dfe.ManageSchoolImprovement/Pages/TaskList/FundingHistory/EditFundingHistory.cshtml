@page "/task-list/edit-funding-history/{id:int}/{fundingHistoryId:guid?}"
@model EditFundingHistoryModel
@{
    ViewData["Title"] = "What funding has the school received?";
}

@section BeforeMain
{
    <a asp-page="@Links.TaskList.Index.Page" asp-route-id="@Model.SupportProject.Id" class="govuk-back-link">Back</a>
}

@if (Model.ShowError)
{
    <partial name="_ErrorSummary" />
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <span class="govuk-caption-l" data-cy="school-name">@Model.SupportProject.SchoolName</span>
        <h1 class="govuk-heading-l" data-cy="page-heading">
            What funding has the school received?
        </h1>
        <form method="post" novalidate>
            <govuk-text-input heading-label="true" label="Funding type" additional-label-css="govuk-label--m" id="funding-type" name="funding-type" asp-for="@Model.FundingType" width="35" />
            <govuk-text-input heading-label="true" label="Funding amount" is-money="true" additional-label-css="govuk-label--m" id="funding-amount" name="funding-amount" asp-for="@Model.FundingAmount" width="10" />
            <govuk-text-input heading-label="true" label="Financial year" additional-label-css="govuk-label--m" id="financial-year" name="financial-year"
                              hint="Enter the financial year the funding was paid. Like, 2023/24." asp-for="@Model.FinancialYear" width="10" />
            <govuk-text-input heading-label="true" label="Funding rounds" additional-label-css="govuk-label--m" id="funding-rounds" name="funding-rounds"
                              hint="Enter the number of payments that were made over the financial year." asp-for="@Model.FundingRounds" width="10" />

            <div class="govuk-form-group">
                <label class="govuk-label govuk-label--l" for="@Model.AdditionalComments">
                     Any additional comments
                </label>
                <div id="additional-comments-hint" class="govuk-hint">
                    Do not include any personal or financial information.
                </div>
                <textarea id="additional-comments"
                          name="additional-comments"
                          class="govuk-textarea"
                          cols="40"
                          rows="5"
                          maxlength="2000" aria-describedby="additional-comments-hint" asp-for="@Model.AdditionalComments"></textarea>
            </div>

            <button class="govuk-button" type="submit" id="save-and-continue-button" data-module="govuk-button" data-cy="select-common-submitbutton">
                Save and continue
            </button>
        </form>
    </div>
</div>
