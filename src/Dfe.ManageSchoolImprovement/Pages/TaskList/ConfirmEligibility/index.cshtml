@page "/task-list/check-eligibility/{id:int}"
@using Dfe.ManageSchoolImprovement.Domain.ValueObjects
@model Dfe.ManageSchoolImprovement.Frontend.Pages.TaskList.ConfirmEligibility.IndexModel
@{
    ViewData["Title"] = "Confirm eligibility";
}

@section BeforeMain
{
    <nav aria-label="back navigation">
        <a asp-page="@Links.TaskList.Index.Page" asp-route-id="@Model.SupportProject.Id"
           class="govuk-back-link">Back</a>
    </nav>
}

@if (Model.SupportProject?.ProjectStatus != ProjectStatusValue.InProgress)
{
    <partial name="Shared/_TaskPausedOrStoppedNotificationSummary" />
}

@if (Model.ShowError)
{
    <partial name="_ErrorSummary"/>
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <span class="govuk-caption-l" data-cy="school-name">@Model.SupportProject.SchoolName</span>
        <h1 id="eligibilityquestion" class="govuk-heading-l" data-cy="page-heading">
            Is this school still eligible for targeted intervention?
        </h1>
        <form method="post" novalidate>
            <govuk-radiobuttons-input heading-style="govuk-fieldset__legend--m"
                                      name="@nameof(Model.SchoolIsEligible)" radio-buttons="@Model.RadioButtons"
                                      asp-for="@Model.SchoolIsEligible" error-message="@Model.ErrorMessage"/>

            <button class="govuk-button" type="submit" id="save-and-continue-button" data-module="govuk-button"
                    data-cy="select-common-submitbutton">
                Save and return
            </button>
        </form>
    </div>
</div>