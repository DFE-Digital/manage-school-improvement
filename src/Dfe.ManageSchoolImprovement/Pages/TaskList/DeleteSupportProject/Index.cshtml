@page "/task-list/{id:int}/confirm-to-delete-project"
@model Dfe.ManageSchoolImprovement.Frontend.Pages.TaskList.DeleteSupportProject.IndexModel
@{
    ViewData["Title"] = "Confirm you want to remove this project";
}

@section BeforeMain
{
    <a asp-page="@Links.TaskList.Index.Page" asp-route-id="@Model.SupportProject.Id" class="govuk-back-link">Back</a>
}

<div class="govuk-grid-row" xmlns="http://www.w3.org/1999/html">
    <div class="govuk-grid-column-two-thirds"> 
        <span class="govuk-caption-l" data-cy="school-name">@Model.SupportProject.SchoolName</span>
        <h1 class="govuk-heading-l" data-cy="page-heading">
            Confirm you want to delete this project
        </h1>
       <p class="govuk-body" data-cy="instruction-to-advisor">
           If you delete this project it will no longer appear in Manage School Improvement.
       </p>
       <p class="govuk-body" data-cy="instruction-to-advisor-2">
           However it will remain in the database and can be recovered in the future if necessary.
       </p>

         <form method="post" novalidate>
            <input type="hidden" asp-for="@Model.IsProjectDeleted" />
            <span class="govuk-!-margin-right-2">
                <button class="govuk-button govuk-button--warning" data-module="govuk-button" id="delete-project-confirmation">
                    Delete project
                </button>
            </span>
            <button class="govuk-button govuk-button--secondary" data-module="govuk-button">
                Cancel
            </button>
        </form>
    </div>
</div>

<script type="application/javascript" asp-add-nonce>
    document.querySelector('#delete-project-confirmation').onclick = () =>{
        document.querySelector('#IsProjectDeleted').value = true;
        document.querySelector('form').submit();
    };
</script>
