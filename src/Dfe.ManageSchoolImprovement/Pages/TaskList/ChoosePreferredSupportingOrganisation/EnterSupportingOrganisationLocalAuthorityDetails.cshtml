@page "/task-list/enter-supporting-organisation-local-authority-details/{id:int}"
@model Dfe.ManageSchoolImprovement.Frontend.Pages.TaskList.ChoosePreferredSupportingOrganisation.EnterSupportingOrganisationLocalAuthorityDetailsModel
@inject IConfiguration Configuration
@{
    ViewData["Title"] = "Enter supporting organisation details";
}

@section BeforeMain
{
    <nav aria-label="back navigation">
        <a asp-page="@Links.TaskList.ChoosePreferredSupportingOrganisationType.Page" asp-route-id="@Model.SupportProject.Id"
           class="govuk-back-link">Back</a>
    </nav>
}

@if (Model.ShowError)
{
    <partial name="_ErrorSummary"/>
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
        <span class="govuk-caption-l">@Model.SupportProject.SchoolName</span>
        <h1 class="govuk-heading-l">
            Enter supporting organisation details
        </h1>

        <form method="post" novalidate>


            <div class="govuk-form-group @(Model.LaCodeError ? "govuk-form-group--error" : "")">

                <div id="local-authority-hint" class="govuk-hint">
                    Search by local authority name, or by the 3 digit GIAS LA name code.
                    <br/>
                    You can <a class="govuk-link" href="https://www.get-information-schools.service.gov.uk/" target="_blank" rel="noreferrer noopener">find an LA's name code in Get information about schools (opens in new tab)</a>.
                </div>

                <partial name="_AutoComplete" model="@Model.AutoCompleteSearchModel" />

            </div>


            <button class="govuk-button" id="save-and-return-button" data-module="govuk-button"
                    data-cy="select-common-submitbutton" type="submit">
                Continue
            </button>
        </form>
    </div>
</div>
