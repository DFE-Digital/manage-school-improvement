@page "/task-list/enter-supporting-organisation-local-authority-details-fallback/{id:int}"
@model Dfe.ManageSchoolImprovement.Frontend.Pages.TaskList.ChoosePreferredSupportingOrganisation.EnterSupportingOrganisationLocalAuthorityDetailsFallbackModel
@inject IConfiguration Configuration
@{
    ViewData["Title"] = "Enter supporting organisation details";
}

@section BeforeMain
{
    <nav aria-label="back navigation">
        <a asp-page="@Links.TaskList.ChoosePreferredSupportingOrganisationType.Page" asp-route-id="@Model.SupportProject.Id"
           class="govuk-back-link">Back</a>
    </nav>
}

@if (Model.ShowError)
{
    <partial name="_ErrorSummary"/>
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
        <span class="govuk-caption-l">@Model.SupportProject.SchoolName</span>
        <h1 class="govuk-heading-l">
            Enter supporting organisation details
        </h1>

        <form method="post" novalidate>
            <govuk-text-input heading-label="true" 
                              label="Organisation name" 
                              id="organisation-name"
                              name="organisation-name" 
                              asp-for="@Model.OrganisationName" 
                              error-message="@Model.OrganisationNameErrorMessage"
                              hint="Enter the name of the local authority that will be the supporting organisation"
                              width="30"/>

            <div class="govuk-form-group @(Model.LaCodeError ? "govuk-form-group--error" : "")">
                <h1 class="govuk-label-wrapper">
                    <label class="govuk-label govuk-label--m" for="trust-ukprn">
                        LA name code
                    </label>
                </h1>
                <div id="trust-ukprn-hint" class="govuk-hint">
                    Enter the 3 digit LA name code of the local authority that will be the supporting organisation.
                    <br/>
                    You can <a class="govuk-link" href="https://www.get-information-schools.service.gov.uk/" target="_blank" rel="noreferrer noopener">find an LA's name code in Get information about schools (opens in new tab)</a>.
                </div>
                @if (Model.LaCodeError)
                {
                    <span id="trust-ukprn-error" class="govuk-error-message">
                        <span class="govuk-visually-hidden">Error:</span> @Model.LaCodeErrorMessage
                    </span>
                }
                <input class="govuk-input govuk-input--width-30 @(Model.LaCodeError ? "govuk-input--error" : "")"
                       id="la-code"
                       name="la-code"
                       value="@Model.LaCode"
                       type="text"
                       aria-describedby="@(Model.LaCodeError ? "la-code-error la-code-hint" : "la-code-hint")" />
            </div>

            <govuk-date-input heading-label="false" 
                              label="Enter date supporting organisation confirmed"
                              id="date-support-organisation-confirmed" 
                              name="date-support-organisation-confirmed"
                              error-message="@Model.DateConfirmedErrorMessage"
                              asp-for="@Model.DateSupportOrganisationConfirmed" 
                              hint="For example, 17 2024."/>

            <button class="govuk-button" id="save-and-return-button" data-module="govuk-button"
                    data-cy="select-common-submitbutton" type="submit">
                Continue
            </button>
        </form>
    </div>
</div>
