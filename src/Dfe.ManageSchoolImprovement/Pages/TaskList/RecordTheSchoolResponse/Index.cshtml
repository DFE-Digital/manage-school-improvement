@page "/task-list/record-the-school-response/{id:int}"
@model Dfe.ManageSchoolImprovement.Frontend.Pages.TaskList.RecordTheSchoolResponse.IndexModel
@{
    ViewData["Title"] = "Record the school's response";
}

@section BeforeMain
{
    <a asp-page="@Links.TaskList.Index.Page" asp-route-id="@Model.SupportProject.Id" class="govuk-back-link">Back</a>
}

@if (Model.ShowError)
{
   <partial name="_ErrorSummary"/>
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <span class="govuk-caption-l" data-cy="school-name">@Model.SupportProject.SchoolName</span>
        <h1 class="govuk-heading-l" data-cy="page-heading">
            Record the responsible body's response
        </h1> 
        <form method="post" novalidate>
            <p class="govuk-body" data-cy="school-confirmtion-target-support">
                Confirm if the responsible body has acknowledged the school is eligible for targeted intervention and if
                they and the school will engage in the process.
            </p>
            <govuk-radiobuttons-input 
                heading="Responsible body's response" 
                name="@nameof(Model.HasAcknowledgedAndWillEngage)" 
                radio-buttons="@Model.TargetedSupportRadioButtoons" 
                asp-for="@Model.HasAcknowledgedAndWillEngage" />
            <govuk-checkbox-input 
                heading="Save the response" 
                heading-style="govuk-fieldset__legend--m" 
                label="Response saved in SharePoint" 
                id="has-saved-school-response-in-sharepoint" 
                name="has-saved-school-response-in-sharepoint" 
                asp-for="@Model.HasSavedSchoolResponseinSharePoint" />
            <govuk-date-input 
                heading-label="false" 
                label="Enter date the response was received" 
                id="school-response-date" name="school-response-date" 
                asp-for="@Model.SchoolResponseDate" 
                hint="For example, 1 7 2024." />
            <button class="govuk-button" type="submit" id="save-and-continue-button" data-module="govuk-button" data-cy="select-common-submitbutton">
                Save and return
            </button>
        </form>
    </div>
</div>
