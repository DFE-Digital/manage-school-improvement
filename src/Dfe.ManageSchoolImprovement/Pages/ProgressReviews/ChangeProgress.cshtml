@page "/progress-reviews/{id:int}/change-progress/{objectiveProgressId:int}"
@using Dfe.Academisation.ExtensionMethods
@model Dfe.ManageSchoolImprovement.Frontend.Pages.ProgressReviews.ChangeProgressModel
@{
    ViewData["Title"] = "Change progress";
}

@section BeforeMain
{
    <nav aria-label="back navigation">
        <a asp-page="@Model.ReturnPage" asp-route-id="@Model.SupportProject.Id"
            asp-route-reviewId="@Model.ImprovementPlanReview.ReadableId" class="govuk-back-link"
            data-cy="back-link">Back</a>
    </nav>
}

@if (Model.ShowError)
{
    <partial name="_ErrorSummary" />
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <span class="govuk-caption-l" data-cy="area-of-improvement">@Model.AreaOfImprovement</span>
        <h1 class="govuk-heading-l" data-cy="page-heading">
            @Model.ObjectiveTitle
        </h1>

        <section class='moj-ticket-panel__content moj-ticket-panel__content--blue'>
            <div class='govuk-grid-row'>
                <div class='govuk-grid-column-two-thirds'>
                    <p class='govuk-body govuk-!-margin-bottom-0'>
                        <strong>Reviewed on @Model.ReviewDate.ToDateString()</strong><br />
                        <strong>by</strong> @Model.ReviewerName
                    </p>
                </div>
            </div>
        </section>

        <form method="post" novalidate>

            <govuk-radiobuttons-input heading="How is the school progressing with this objective?"
                heading-style="govuk-fieldset__legend--m" name="ProgressStatus" asp-for="@Model.ProgressStatus"
                radio-buttons="@Model.ProgressRadioButtons" data-cy="progress-status-radios"
                error-message="@Model.ProgressStatusErrorMessage" />

            <div class="govuk-form-group @(Model.ShowDetailsError ? "govuk-form-group--error" : "")">
                <h2 class="govuk-label-wrapper">
                    <label class="govuk-label govuk-label--m" for="ProgressDetails">
                        Details
                    </label>
                </h2>
                @if (Model.ShowDetailsError)
                {
                    <p id="more-detail-error" class="govuk-error-message">
                        <span class="govuk-visually-hidden">Error:</span> Enter details about how the school is progressing
                        with this objective
                    </p>
                }
                <textarea class="govuk-textarea @(Model.ShowDetailsError ? "govuk-textarea--error" : "")"
                    id="ProgressDetails" name="ProgressDetails" rows="5" data-cy="progress-details-textarea"
                    asp-for="@Model.ProgressDetails"></textarea>
            </div>

            <div class="govuk-button-group">
                <button class="govuk-button" type="submit" data-module="govuk-button" data-cy="save-and-return-button">
                    Save and return
                </button>
            </div>
        </form>
    </div>
</div>
