@model Dfe.ManageSchoolImprovement.Frontend.ViewModels.CheckboxInputViewModel
<div class="govuk-form-group">
    <div class="govuk-checkboxes">
        @if (!string.IsNullOrEmpty(Model.Heading))
        {
            <legend class="govuk-fieldset__legend @Model.HeadingStyle">
                @Model.Heading
            </legend>
        }
        <div class="govuk-checkboxes__item">
            <input name="@Model.Name-hidden" type="hidden" value="false" />
            <input class="govuk-checkboxes__input" id="@Model.Id" name="@Model.Name" type="checkbox" value="true" checked="@("true".Equals(Model.Value, StringComparison.OrdinalIgnoreCase))">
            <label class="govuk-label govuk-checkboxes__label" for="@Model.Id">
                @Model.Label
                @if (!string.IsNullOrEmpty(Model.LabelHint))
                {
                    <br />
                    <span id="@Model.Id-hint" class="govuk-hint">
                        @Model.LabelHint
                        @if (!string.IsNullOrEmpty(Model.Email))
                        {
                            <a class='govuk-link' href='mailto:@Model.Email?subject=Manage%20school%20improvement:%20support%20query'>@Model.Email</a>
                        }
                    </span>
                }
            </label>
        </div>
    </div>
</div>
