@using Dfe.ManageSchoolImprovement.Domain.ValueObjects
@model ProjectStatusValue

@{
    string output;
    string colour;

    switch (Model)
    {
        case ProjectStatusValue.Stopped:
            output = "Stopped";
            colour = "red";
            break;
        case ProjectStatusValue.Paused:
            output = "Paused";
            colour = "yellow";
            break;
        default:
            output = "In progress";
            colour = "green";
            break;
    }
}

<strong class="govuk-tag govuk-tag--@colour" id="">@output</strong>