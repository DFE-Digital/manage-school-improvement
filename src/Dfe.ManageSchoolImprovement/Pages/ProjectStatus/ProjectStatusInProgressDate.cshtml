@page "/project-status-in-progress-date/{id:int}"

@model Dfe.ManageSchoolImprovement.Frontend.Pages.ProjectStatus.ProjectStatusInProgressDateModel

@{
    ViewData["Title"] = "Enter date the project continued";
    
    var buttonText = Model.ChangeDateLinkClicked ? "Save" : "Continue"; 
}

@section BeforeMain
{
    <nav aria-label="back navigation">
        <a asp-page="@Model.ReturnPage" class="govuk-back-link" asp-route-id="@Model.SupportProject?.Id">@Links.ProjectStatusTab.ChangeProjectStatus.BackText</a>
    </nav>
}

<partial name="_ErrorSummary" />


<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <span class="govuk-caption-l">@Model.SupportProject?.SchoolName</span>
        <h2 class="govuk-heading-l govuk-!-margin-bottom-2" data-test="project-status-paused-date">Enter date the project continued</h2>
        <p>This is the date DfE decided to end a period when the intervention had paused or stopped.</p>
        <form method="post" novalidate="">
            <input type="hidden" asp-for="@Model.ProjectStatus"/>
            <input type="hidden" asp-for="@Model.ChangedBy"/>
            <input type="hidden" asp-for="@Model.ChangeDateLinkClicked"/>
            <govuk-date-input heading-label="false" label="Enter date"
                              id="project-status-in-progress-date" name="project-status-in-progress-date"
                              asp-for="@Model.InProgressDate" hint="For example, 1 7 2024."/>
            <button class="govuk-button" type="submit" id="continue-button" data-module="govuk-button"
                    data-cy="select-common-submitbutton">
                @buttonText
            </button>
        </form>
    </div>
</div>