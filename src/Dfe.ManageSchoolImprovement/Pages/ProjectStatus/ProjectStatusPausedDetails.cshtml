@page "/project-status-paused-details/{id:int}"

@model Dfe.ManageSchoolImprovement.Frontend.Pages.ProjectStatus.ProjectStatusPausedDetailsModel

@{
    ViewData["Title"] = "Enter details";
    
    var buttonText = Model.ChangeDetailsLinkClicked ? "Save" : "Save and continue"; 

}

@section BeforeMain
{
    <nav aria-label="back navigation">
        <a asp-page="@Model.ReturnPage" class="govuk-back-link" asp-route-id="@Model.SupportProject?.Id">@Links.ProjectStatusTab.ProjectStatusPausedDate.BackText</a>
    </nav>
}

<partial name="_ErrorSummary" />

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <span class="govuk-caption-l">@Model.SupportProject?.SchoolName</span>
        <form method="post" novalidate>
            <div class="govuk-form-group">
                <h1 class="govuk-label-wrapper" data-test="project-status-paused-details">
                    <label class="govuk-label govuk-label--l">
                        Enter details
                    </label>
                </h1>
                <div class="govuk-hint">Provide details about why this project has been paused and any next steps required</div>
                <input type="hidden" asp-for="@Model.ProjectStatus"/>
                <input type="hidden" name="pausedDate" value="@(Model.PausedDate?.ToString("yyyy-MM-dd"))"/>
                <input type="hidden" asp-for="@Model.ChangedBy"/>
                <input type="hidden" asp-for="@Model.ChangeDetailsLinkClicked"/>
                <textarea class="govuk-textarea @(Model.ShowError ? "govuk-textarea--error" : string.Empty)"
                id="project-status-paused-details" name="project-status-paused-details" rows="5"
                asp-for="@Model.PausedDetails" data-cy="paused-details-textarea"></textarea>
            </div>
            <button class="govuk-button" type="submit" id="continue-button" data-module="govuk-button"
                    data-cy="select-common-submitbutton">
                @buttonText
            </button>
        </form>
    </div>
</div>
