@page "/project-status-stopped-details/{id:int}"

@model Dfe.ManageSchoolImprovement.Frontend.Pages.ProjectStatus.ProjectStatusStoppedDetailsModel

@{
    ViewData["Title"] = "Enter details";
    
    var buttonText = Model.ChangeDetailsLinkClicked ? "Save" : "Save and continue"; 

}

@section BeforeMain
{
    <nav aria-label="back navigation">
        <a asp-page="@Model.ReturnPage" class="govuk-back-link" asp-route-id="@Model.SupportProject?.Id">@Links.ProjectStatusTab.ProjectStatusStoppedDate.BackText</a>
    </nav>
}

<partial name="_ErrorSummary" />

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <span class="govuk-caption-l">@Model.SupportProject?.SchoolName</span>
        <form method="post" novalidate>
            <h1 class="govuk-label-wrapper" data-test="project-status-stopped-details">
                <label class="govuk-label govuk-label--l">
                    Enter details
                </label>
            </h1>
            <div class="govuk-form-group @(Model.ShowError ? "govuk-form-group--error" : string.Empty)">
                <div class="govuk-hint">Provide details about why this project has been stopped and any next steps required.</div>
                <input type="hidden" asp-for="@Model.ProjectStatus"/>
                <input type="hidden" name="stoppedDate" value="@(Model.StoppedDate?.ToString("yyyy-MM-dd"))"/>
                <input type="hidden" asp-for="@Model.ChangedBy"/>
                <input type="hidden" asp-for="@Model.ChangeDetailsLinkClicked"/>
                @if (Model.ShowError)
                {
                    <p id="more-detail-error" class="govuk-error-message">
                        <span class="govuk-visually-hidden">Error:</span> Enter details
                    </p>
                }
                <textarea class="govuk-textarea @(Model.ShowError ? "govuk-textarea--error" : string.Empty)"
                      id="project-status-stopped-details" name="project-status-stopped-details" rows="5"
                      asp-for="@Model.StoppedDetails" data-cy="stopped-details-textarea"></textarea>
            </div>
            <button class="govuk-button" type="submit" id="continue-button" data-module="govuk-button"
                    data-cy="select-common-submitbutton">
                @buttonText
            </button>
        </form>
    </div>
</div>