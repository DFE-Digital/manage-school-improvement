@page "/project-status-paused-date/{id:int}"

@model Dfe.ManageSchoolImprovement.Frontend.Pages.ProjectStatus.ProjectStatusPausedDateModel

@{
    ViewData["Title"] = "Enter date the intervention paused";
}

@section BeforeMain
{
    <nav aria-label="back navigation">
        <a asp-page="@Model.ReturnPage" class="govuk-back-link" asp-route-id="@Model.SupportProject?.Id">@Links.ProjectStatusTab.ChangeProjectStatus.BackText</a>
    </nav>
}

<partial name="_ErrorSummary" />

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <span class="govuk-caption-l">@Model.SupportProject?.SchoolName</span>
        <h2 class="govuk-heading-l govuk-!-margin-bottom-2" data-test="project-status-paused-date">Enter date the intervention paused</h2>
        <p>This must be the date that DfE found out about the reason for pausing the intervention.</p>

        <form method="post" novalidate="">
            <input type="hidden" asp-for="@Model.ProjectStatus"/>
            <input type="hidden" asp-for="@Model.ChangedBy"/>
            <govuk-date-input heading-label="false" label="Enter date paused"
                              id="project-status-paused-date" name="project-status-paused-date"
                              asp-for="@Model.PausedDate" hint="For example, 1 7 2024."/>
            <button class="govuk-button" type="submit" id="continue-button" data-module="govuk-button"
                    data-cy="select-common-submitbutton">
                Continue
            </button>
        </form>
    </div>
</div>